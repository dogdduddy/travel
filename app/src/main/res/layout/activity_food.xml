<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food.Food">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/backSpace"
        android:src="@drawable/backspace"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제주in"
        android:id="@+id/tool_title"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/backSpace"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맛집"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginLeft="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tool_title"
        app:layout_constraintStart_toEndOf="@+id/tool_title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view_food"
        android:layout_marginTop="45dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>